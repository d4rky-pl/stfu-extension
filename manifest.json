{
  "manifest_version": 3,

  "name": "Shut Up Already!",
  "short_name": "STFU Already!",
  "author": "Micha≈Ç Matyas",
  "version": "2.2.0",

  "description": "This extension mutes all tabs by default. Great tool against autoplayed videos and ads!",
  "icons": {
    "128": "audio-muted.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "audio-muted.png"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs", "storage", "contextMenus"
  ]
}
